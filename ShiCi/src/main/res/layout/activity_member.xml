<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MemberActivity"
    android:orientation="vertical"
    android:background="#f5f2f2">





    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:background="#FFF"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/people" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未登录"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvMemberInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前未开通" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tvIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/memberIntro"
        android:background="#FFF"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="8dp"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#FFF"
        android:id="@+id/container1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1个月"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView3"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorFont"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="¥8"
            android:id="@+id/tv_1month_current"
            android:layout_marginLeft="50dp"
            android:textColor="@color/colorFont"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tv_1month_original"
            android:layout_marginLeft="10dp"
            android:text=""/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="38dp"
            android:text="开通"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn1Month"
            style="@style/ButtonStyle" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#FFF"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="3个月"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorFont"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="¥22"
            android:id="@+id/tv_3month_current"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorFont"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tv_3month_original"
            android:layout_marginLeft="10dp"
            android:text=""/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="38dp"
            android:text="开通"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn3Month"
            style="@style/ButtonStyle" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#FFF"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="6个月"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorFont"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="¥42"
            android:id="@+id/tv_6month_current"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorFont"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tv_6month_original"
            android:layout_marginLeft="10dp"
            android:text=""/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="38dp"
            android:text="开通"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn6Month"
            style="@style/ButtonStyle" />


    </LinearLayout>

</LinearLayout>
