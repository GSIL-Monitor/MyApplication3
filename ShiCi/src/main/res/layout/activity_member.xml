<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yuwen.activity.MemberActivity"
    android:background="#f5f2f2">



    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        app:layout_constraintGuide_begin="161dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:background="#FFF"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/people" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未登录"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvMemberInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前未开通" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tvIntro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/memberIntro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:background="#FFF"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textSize="14sp"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvIntro"
        android:padding="8dp"
        android:background="#FFF"
        android:id="@+id/container1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1个月"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView3"
            android:layout_marginLeft="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.50" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥8"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="120dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView2"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.50"
            android:layout_marginLeft="8dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="开通"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn1Month"
            style="@style/ButtonStyle"
            app:layout_constraintHorizontal_bias="0.855" />


    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container1"
        android:padding="8dp"
        android:background="#FFF"
        android:id="@+id/container2"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3个月"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView4"
            android:layout_marginLeft="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.50" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥22"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="120dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView5"
            app:layout_constraintLeft_toRightOf="@+id/textView4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.50"
            android:layout_marginLeft="8dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="开通"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn3Month"
            style="@style/ButtonStyle"
            app:layout_constraintHorizontal_bias="0.855" />


    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container2"
        android:padding="8dp"
        android:background="#FFF"
        android:id="@+id/container3"
        android:layout_marginTop="2dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6个月"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView6"
            android:layout_marginLeft="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.50" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥42"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="120dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView7"
            app:layout_constraintLeft_toRightOf="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.50"
            android:layout_marginLeft="8dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="开通"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textView7"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn6Month"
            style="@style/ButtonStyle"
            app:layout_constraintHorizontal_bias="0.855"  />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
