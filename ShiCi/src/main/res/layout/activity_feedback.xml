<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yuwen.activity.FeedbackActivity"
    android:padding="10dp">

    <EditText
        android:id="@+id/edit_feedback"
        android:layout_width="0dp"
        android:layout_height="230dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="15sp"
        android:hint="@string/feedbackHint"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/edit_bg"
        android:paddingLeft="8dp"/>
       <TextView
           android:id="@+id/tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="你的联系方式（选填）："
           android:layout_marginTop="21dp"
           android:textColor="#000"
           android:textSize="17sp"
           app:layout_constraintTop_toBottomOf="@+id/edit_feedback"
           android:layout_marginLeft="0dp"
           app:layout_constraintLeft_toLeftOf="@+id/edit_feedback" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical" />

    <EditText
        android:id="@+id/edit_qq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:ems="10"
        android:inputType="number"
        android:hint="QQ"
        app:layout_constraintLeft_toLeftOf="@+id/edit_feedback"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/edit_feedback"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/edit_wechat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/edit_qq"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/edit_qq"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="10dp"
        android:hint="微信"
        app:layout_constraintTop_toBottomOf="@+id/edit_qq"
        app:layout_constraintVertical_bias="0.058"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/edit_mail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="@+id/edit_wechat"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/edit_wechat"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_wechat"
        app:layout_constraintHorizontal_bias="0.0"
        android:hint="邮箱"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/buttonCommit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="提交"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        style="@style/ButtonStyle"/>




</android.support.constraint.ConstraintLayout>
