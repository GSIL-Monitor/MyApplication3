<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>



    </style>

   <!-- <style name="AppTheme.NoActionBar" parent="QMUI.Compat.NoActionBar">
       &lt;!&ndash; <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>&ndash;&gt;
        &lt;!&ndash;<item name="colorPrimaryDark">@color/colorPrimaryDark</item>&ndash;&gt;


    </style>-->

    <style name="AppTheme.ActionBar" parent="QMUI.Compat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:minHeight">40dp</item>


    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@drawable/button</item>

    </style>

    <style name="EditTextStyle" >
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ff444444</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/colorFontDisable</item>
    </style>



    <!--以下两个用于设置Toolbar的style-->
  <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    <item name="android:background">@color/colorPrimary</item>
    <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>

</style>
    <!--menu text style-->
    <style name="MenuTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <!--设置toolbar弹出菜单的位置-->
    <style name="OverflowMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>  <!--设置为false即可使menu位置位于toolbar之下-->
        <!--<item name="android:popupBackground">@color/colorPrimary</item>-->
        <item name="android:dropDownVerticalOffset">8dp</item>
        <item name="android:dropDownHorizontalOffset">-3dp</item>
    </style>

    <!--<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->


    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/tranlate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/tranlate_dialog_out</item>
    </style>


    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
    </style>



    <!--&lt;!&ndash;修改toolbar弹出剩余隐藏菜单条目按钮的样式&ndash;&gt;
    <style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu_setting</item>
    </style>-->

</resources>
