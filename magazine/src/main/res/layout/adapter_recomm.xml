<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_10">
  <TextView
      android:id="@+id/recomm_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="文章标题"
      android:textSize="18sp"/>
    <TextView
        android:id="@+id/recomm_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recomm_title"
        android:text="2018-08-17 03:43:28 博客天下2018年15期"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorFontDisable"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recomm_time"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="right">
        <TextView
            android:id="@+id/recomm_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:layout_toRightOf="@id/recomm_count"
            android:layout_marginLeft="6dp"/>

    </RelativeLayout>
</RelativeLayout>
