<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.qq.e.union.demo.DemoListActivity">

    <Button
        android:id="@+id/bannerADButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Banner广告接入示例" />

    <Button
        android:id="@+id/interstitialADButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="插屏广告接入示例" />

    <Button
        android:id="@+id/nativeADButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="原生广告(自渲染)接入示例" />

    <Button
        android:id="@+id/nativeADButton_MP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="原生广告(自渲染)接入示例(多进程)" />

    <Button
        android:id="@+id/nativeVideoADButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="原生视频广告(自渲染)接入示例" />

    <Button
        android:id="@+id/nativeExpressADButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="原生广告(模板渲染)接入示例" />

    <Button
        android:id="@+id/contentADButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="内容+广告接入示例" />

    <Button
        android:id="@+id/splashADButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="开屏广告接入示例" />

    <LinearLayout
        android:id="@+id/posIdContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonContainer"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:text="开屏广告位id："/>

        <EditText
            android:id="@+id/posId"
            android:text=""
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_marginTop="10dp"
        android:text="开屏广告位是否显示logo"
        android:textSize="18dp"
        android:checked="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
