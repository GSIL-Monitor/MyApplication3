<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_story_cover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/ic_launcher_round"
        android:contentDescription="播放列表"
        android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/song_title"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="歌曲名称"
                />
            <ImageView
                android:id="@+id/iv_play_last"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_last"
                android:contentDescription="上一曲"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play"
                android:contentDescription="播放"
                android:layout_weight="1"
                android:visibility="gone"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/iv_play_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_stop"
                android:contentDescription="暂停播放"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/iv_play_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:contentDescription="下一曲"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:contentDescription="退出"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>

        </LinearLayout>





</LinearLayout>
