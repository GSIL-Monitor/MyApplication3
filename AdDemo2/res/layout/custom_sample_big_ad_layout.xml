<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="285dp"
    android:background="#FFFFFFFF">

    <TextView
        android:id="@+id/title"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="谁说租房要凑合？收益随时取，不再为房租发愁"
        android:textColor="#E5000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/big_image"
        android:layout_width="334dp"
        android:layout_height="167dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="334dp"
        android:layout_height="match_parent"
        android:layout_below="@id/big_image"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/popularize"
            android:layout_width="33dp"
            android:layout_height="17dp"
            android:gravity="center"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="51人品 | 81.13万人下载"
            android:textSize="10sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_toRightOf="@id/popularize"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="13dp"
            android:textColor="#7f000000"/>
        <TextView
            android:id="@+id/install"
            android:layout_width="74dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/install_btn_bg"
            android:text="立即安装"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="12sp"
            />
    </RelativeLayout>
</RelativeLayout>